@model OrderItem

@{
    ViewBag.Title = "Edit order item";
    Layout = "_Layout";
}

<h1>Edit order item</h1>
@using (Html.BeginForm("UpdateOrderItem", "OrderItem", new {id = Model.Id}, FormMethod.Post))
{
    <input type="hidden" id="OrderId" name="OrderId" value="@Model.OrderId">
    <input type="hidden" id="OrderId" name="Id" value="@Model.Id">
   
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="Name" value="@Model.Name"><br><br>

    <label for="Quantity">Quantity:</label>
    <input pattern="^\d*(\,\d{0,3})?$" id="Quantity" name="Quantity" value="@Model.Quantity"><br><br>

    <label for="Unit">Unit:</label>
    <input type="text" id="Unit" name="Unit" value="@Model.Unit"><br><br>

    <div class="col-sm-4">
        <button type="submit" class="btn btn-primary">Save order item</button>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("GetOrderById", "Order", new {id = Model.OrderId})'">Back</button>
    </div><br>
}