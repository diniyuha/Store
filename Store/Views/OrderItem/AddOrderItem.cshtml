@model int

@{
    ViewBag.Title = "New order item";
    Layout = "_Layout";
}

<h1>Add order item</h1>
@using (Html.BeginForm("CreateOrderItem", "OrderItem", FormMethod.Post))
{
    <input type="hidden" id="OrderId" name="OrderId" value="@Model">
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="Name"><br><br>

    <label for="Quantity">Quantity:</label>
    <input type="number" id="Quantity" name="Quantity"><br><br>

    <label for="Unit">Unit:</label>
    <input type="text" id="Unit" name="Unit"><br><br>

    <div class="col-sm-4">
        <button type="submit" class="btn btn-primary">Save order item</button>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("GetOrderById", "Order", new {id = Model})'">Back</button>
    </div><br>
}